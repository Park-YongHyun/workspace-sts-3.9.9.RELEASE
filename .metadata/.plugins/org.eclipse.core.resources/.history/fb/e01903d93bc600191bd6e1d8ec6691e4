<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>tmp1-1</title>
	<script src="${pageContext.request.contextPath}/resources/js/jquery-3.4.1.min.js"></script>
</head>

<body>
	<input id="front" type="text" /><br />
	<input id="back" type="text" /><br />
	
	<button onclick="btnchck();">답 보기</button>
	<button onclick="btn1();">O</button>
	<button onclick="btn2();">?</button>
	<button onclick="btn3();">X</button>
	<button onclick="btnnext();">다음</button>
	<button onclick="btntest();">테스트용 버튼</button>
	
	<script>
		var userId = "id 입력 필요";
		var cardNo;
		var data;
		var rand;
		var chck1 = 0;
		$(function(){ // 데이터 베이스 가져오기
			// $.get('http://127.0.0.1:3000/tmp1/11', function(retdata){ // get 방식
			// 	data = retdata;
			// 	console.log(data);
			// 	btnnext();
			// },'json');
			$.post( "http://127.0.0.1:3000/tmp1/1", { sql: "SELECT * FROM QUIZCARD" }) // post 방식
  			.done(function( retdata ) {
				data = retdata.rows;
				console.log(data);
				btnnext();
  			});
		});

		function btnchck() {
			chck();
		}
		function btn1() { // O
			chck1 = 2;
			chck();
			next();
			send1();
		}
		function btn2() { // ?
			chck1 = 1;
			chck();
			next();
		}
		function btn3() { // X
			chck1 = -1;
			chck();
			next();
		}
		function btnnext() {
			next();
		}

		function btntest() { // 테스트용 버튼
			console.log("테스트용 버튼");
			$.post( "http://127.0.0.1:3000/tmp1/1", { sql: "INSERT INTO QUIZCARD VALUES(1, 2, 3, 4, 5)" })
  			.done(function( retdata ) {
				console.log(retdata);
  			});
		}

		function chck() {
			if(chck1 !== 0){
				$('#back').val(data[rand][3]); // 답 보기
				data.splice(rand,1); // 카드 제거
				chck1 = 0;
			}
		}
		function next() {
			var len = data.length;
			if(len === 0){
				location.replace("${pageContext.request.contextPath}/1"); // 카드가 없으면 특정 페이지로 이동
				return;
			}
			rand = Math.floor(Math.random() * len); // 랜덤
			cardNo = data[rand][1];
			$('#front').val(data[rand][2]); // 다음 카드
			$('#back').val("");
			chck1 = 1;
		}
		function send1() {
			$.post( "http://127.0.0.1:3000/tmp1/2", { userId:userId, cardNo:cardNo, val:chck1 });
		}
		
	</script>
</body>
</html>