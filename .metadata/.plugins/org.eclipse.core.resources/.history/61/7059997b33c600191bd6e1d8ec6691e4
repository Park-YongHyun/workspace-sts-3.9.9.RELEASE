<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>tmp1-1</title>
	<script src="${pageContext.request.contextPath}/resources/js/jquery-3.4.1.min.js"></script>
</head>

<body>
	<input id="front" type="text" /><br />
	<input id="back" type="text" /><br />
	
	<button onclick="btnchck();">답 보기</button>
	<button onclick="btn1();">O</button>
	<button onclick="btn2();">?</button>
	<button onclick="btn3();">X</button>
	<button onclick="btnnext();">다음</button>
	
	<script>
		var userId;
		var cardNo;
		var data;
		var rand;
		var chck1 = 0;
		$(function(){ // 데이터 베이스 가져오기
			$.get('http://127.0.0.1:3000/tmp1/1', function(retdata){
				data = retdata;
				console.log(data);
				console.log(data[0][0]);
				btnnext();
			},'json');
		});

		function btnchck() {
			chck();
		}
		function btn1() { // O
			chck1 = 2;
			chck();
			next();
			send1();
		}
		function btn2() { // ?
			chck1 = 1;
			chck();
			next();
		}
		function btn3() { // X
			chck1 = -1;
			chck();
			next();
		}
		function btnnext() {
			next();
		}

		function chck() {
			if(chck1 !== 0){
				$('#back').val(data[rand][3]); // 답 보기
				data.splice(rand,1); // 카드 제거
				chck1 = 0;
			}
		}
		function next() {
			var len = data.length;
			if(len === 0){
				location.replace("${pageContext.request.contextPath}/1"); // 카드가 없으면 특정 페이지로 이동
				return;
			}
			rand = Math.floor(Math.random() * len); // 랜덤
			no = 
			$('#front').val(data[rand][2]); // 다음 카드
			$('#back').val("");
			chck1 = 1;
		}
		function send1() {
			$.post( "http://127.0.0.1:3000/tmp1/2", { userId:userId, cardNo:cardNo, val:chck1 });
		}
		
	</script>
</body>
</html>